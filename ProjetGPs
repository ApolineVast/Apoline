<?php
class gestion{
   
    


    public function afficher(){ //fonction pour afficher les utliliadteur de la BDD

        try
        {
            $maBase=new PDO('mysql:host=localhost; dbname=admin;
            charset=utf8','root', '');
            $maBase->query('SELECT * FROM `admin`');   
        }    
            catch (Exception $erreur){
                echo 'Erreur : '.$erreur ->getMessage();
        }
    }

    public function adminDelete($delete){ //fonction pour retiter un admin

        try
        {
            $maBase=new PDO('mysql:host=localhost; dbname=admin;charset=utf8','root', '');
            $maBase->query('DELETE FROM `admin` WHERE `id_admin`="'.$delete.'"');
        }    
            catch (Exception $erreur){
                echo 'Erreur : '.$erreur ->getMessage();
        }

    }

    public function update($user, $mdp) //mise Ã  jour 
    {
        try{
            $BDD = new PDO('mysql:host=localhost; dbname=admin;
            charset=utf8','root', '');
            $BDD ->query('UPDATE `admin` SET `motdepasse`="'.$mdp.'",`pseudo`="'.$user.);
           }

           catch (Exception $erreur){
            echo 'Erreur : '.$erreur ->getMessage();
           }
    }

    public function ajoutadmin() // fonction pour ajouter un admin
    
    {
        try{
            $BDD = new PDO('mysql:host=localhost; dbname=admin;
            charset=utf8','root', '');
            $BDD ->query('INSERT INTO `projet gps`.`admin` (`idAdmin`, `user`, `mdp`)' );
            $BDD ->query('DELETE Users FROM Users WHERE `id_Users`  = ');
           }

           catch (Exception $erreur){
            echo 'Erreur : '.$erreur ->getMessage();
           }
    }
}


?>
